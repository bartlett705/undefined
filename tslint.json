{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {
    "semicolon": [true, "never"],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template",
      "jsx-double"
    ]
  },
  "rules": {
    "interface-name": [true, "never-prefix"],
    "max-classes-per-file": false,
    "semicolon": [true, "never"],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template",
      "jsx-double"
    ],
    "object-literal-key-quotes": [true, "as-needed"],
    "trailing-comma": [true, "never"]
  },
  "rulesDirectory": []
}
